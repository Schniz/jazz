{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "module": "esnext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ]
}
